<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.movies.MovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBarBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@color/colorPrimaryDark">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lil_caracteritics"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:id="@+id/air_date_container"
                    app:layout_constraintStart_toStartOf="@id/lil_caracteritics"
                    app:layout_constraintTop_toTopOf="@id/lil_caracteritics"
                    app:layout_constraintBottom_toBottomOf="@id/lil_caracteritics"
                    app:layout_constraintEnd_toStartOf="@id/season_container"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_margin="15dp">

                    <TextView
                        android:id="@+id/text_air_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/air_date_text"
                        android:textColor="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/air_date"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@id/text_air_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/air_date" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/season_container"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/lil_caracteritics"
                    app:layout_constraintStart_toEndOf="@id/air_date_container"
                    app:layout_constraintTop_toTopOf="@id/lil_caracteritics">

                    <TextView
                        android:id="@+id/text_season"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/season_text"
                        android:textColor="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/number_of_season"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@id/text_season"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/number_seasons" />

                </RelativeLayout>

                <RelativeLayout
                    app:layout_constraintStart_toEndOf="@id/season_container"
                    app:layout_constraintEnd_toEndOf="@id/lil_caracteritics"
                    app:layout_constraintTop_toTopOf="@id/lil_caracteritics"
                    app:layout_constraintBottom_toBottomOf="@id/lil_caracteritics"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_margin="15dp">

                    <TextView
                        android:id="@+id/episodes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/episodes_text"
                        android:textColor="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/episodes"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/episodes_text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/episode_text" />

                </RelativeLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layer_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_guest_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/guests_text"
                android:textColor="@color/colorAccent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/guest_stars"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:background="@color/color_primary_semi_opaq"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="horizontal">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/overview_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/details_overview"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_overview"
                android:layout_margin="@dimen/text_margin"
                android:layout_marginStart="15dp"
                android:background="@color/color_primary_semi_opaq"
                android:padding="@dimen/text_margin"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>