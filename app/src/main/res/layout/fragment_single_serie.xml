<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.movies.MovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            card_view:cardCornerRadius="5dp"
            card_view:layout_collapseMode="pin"
            card_view:cardElevation="8dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lil_caracteritics"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:id="@+id/imdb_rating"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="@id/lil_caracteritics"
                    app:layout_constraintEnd_toStartOf="@id/season_container"
                    app:layout_constraintStart_toStartOf="@id/lil_caracteritics"
                    app:layout_constraintTop_toTopOf="@id/lil_caracteritics">

                    <TextView
                        android:id="@+id/text_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/imdb_rating"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/rate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/text_rate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/imdb_rating" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/season_container"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="@id/lil_caracteritics"
                    app:layout_constraintEnd_toStartOf="@id/language_container"
                    app:layout_constraintStart_toEndOf="@id/imdb_rating"
                    app:layout_constraintTop_toTopOf="@id/lil_caracteritics">

                    <TextView
                        android:id="@+id/text_season"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/number_seasons"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/number_of_season"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_below="@id/text_season"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/season_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/language_container"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="@id/lil_caracteritics"
                    app:layout_constraintEnd_toEndOf="@id/lil_caracteritics"
                    app:layout_constraintStart_toEndOf="@id/season_container"
                    app:layout_constraintTop_toTopOf="@id/lil_caracteritics">

                    <TextView
                        android:id="@+id/language_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/language"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/language"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:layout_below="@id/language_text"
                        android:gravity="center"
                        android:textColor="@color/white"/>

                </RelativeLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/tv_show"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/colorPrimaryDark"
            card_view:cardCornerRadius="5dp"
            card_view:layout_collapseMode="pin"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/genres_text"
                        android:layout_margin="@dimen/text_margin"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/genres"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/text_margin"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_realisator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="@string/realisators_text"
                        android:textColor="@color/colorAccent" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/realisators"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:scrollbarStyle="outsideInset"
                        android:scrollbars="horizontal">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="@string/details_overview"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/number_seasons"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/seasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/text_networks"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/networks"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="horizontal" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
